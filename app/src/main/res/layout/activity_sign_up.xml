<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.makman.rivertracker.Activities.SignUpActivity">
    <EditText
        android:id="@+id/signup_edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="@string/signup_edit_email"
        />
    <EditText
        android:id="@+id/signup_edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/signup_edit_password"
        android:layout_below="@id/signup_edit_text_email"
        />
    <EditText
        android:id="@+id/signup_edit_text_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/signup_edit_repassword"
        android:layout_below="@id/signup_edit_text_password"
        />

    <Button
        android:id="@+id/signup_button_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_edit_text_password_confirm"
        android:text="@string/signup_text_signup"
        />
    <Button
        android:id="@+id/signup_button_have_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_button_signup"
        android:text="@string/signup_have_account"/>
    <Button
        android:id="@+id/signup_button_no_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_button_have_account"
        android:text="@string/signup_no_account"/>

</RelativeLayout>
